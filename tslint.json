{
  "extends": [
    "tslint-consistent-codestyle"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "interface-name": [
      false,
      "always-prefix"
    ],
    "component-selector": [
      true,
      "element",
      "ao",
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      "ao",
      "camelCase"
    ],
    "eofline": true,
    "import-destructuring-spacing": true,
    "invoke-injectable": true,
    "no-access-missing-member": false,
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-trailing-whitespace": [
      true,
      "ignore-comments"
    ],
    "prefer-const": true,
    "pipe-naming": [
      true,
      "camelCase",
      "ao"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "templates-use-public": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    // General
    "no-console": [
      true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      500
    ],
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    // tslint-consistent-codestyle settings-start
    "no-unused": true, // Disallows unused imports, variables, functions, classes, type parameters and more.
    "no-static-this": true,
    "no-var-before-return": true,
    "prefer-const-enum": true,
    // tslint-consistent-codestyle settings-end
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
